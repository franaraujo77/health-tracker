{
  "dashboard": {
    "title": "Synthetic Monitoring - Service Uptime",
    "tags": ["synthetic-monitoring", "uptime", "availability"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Overall Service Availability (Last 24h)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 4},
        "targets": [{
          "expr": "avg(service:uptime:ratio_24h) * 100",
          "legendFormat": "Uptime %",
          "refId": "A"
        }],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "justifyMode": "center",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "orange"},
                {"value": 99, "color": "yellow"},
                {"value": 99.9, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Service Availability by Component",
        "type": "bargauge",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [{
          "expr": "service:uptime:ratio_24h * 100",
          "legendFormat": "{{ service }}",
          "refId": "A"
        }],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 99, "color": "orange"},
                {"value": 99.9, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Current Service Status",
        "type": "table",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [{
          "expr": "probe_success",
          "instant": true,
          "format": "table",
          "refId": "A"
        }],
        "transformations": [{
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true
            },
            "renameByName": {
              "service": "Service",
              "check": "Check",
              "severity": "Severity",
              "Value": "Status"
            }
          }
        }],
        "fieldConfig": {
          "overrides": [{
            "matcher": {"id": "byName", "options": "Status"},
            "properties": [{
              "id": "custom.displayMode",
              "value": "color-background"
            }, {
              "id": "mappings",
              "value": [
                {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
                {"type": "value", "value": "1", "text": "UP", "color": "green"}
              ]
            }]
          }]
        }
      },
      {
        "id": 4,
        "title": "Probe Duration (95th Percentile)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 12, "w": 24, "h": 8},
        "targets": [{
          "expr": "histogram_quantile(0.95, sum(rate(probe_duration_seconds_bucket[5m])) by (le, service))",
          "legendFormat": "{{ service }} (P95)",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10,
              "pointSize": 5
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Probe Failures (Last 6 Hours)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 20, "w": 24, "h": 8},
        "targets": [{
          "expr": "sum by (service) (rate(probe_success{} == 0 [5m]))",
          "legendFormat": "{{ service }} failures/sec",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            },
            "color": {
              "fixedColor": "red",
              "mode": "fixed"
            }
          }
        }
      },
      {
        "id": 6,
        "title": "SSL Certificate Expiry",
        "type": "table",
        "gridPos": {"x": 0, "y": 28, "w": 24, "h": 6},
        "targets": [{
          "expr": "(probe_ssl_earliest_cert_expiry - time()) / 86400",
          "instant": true,
          "format": "table",
          "refId": "A"
        }],
        "transformations": [{
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true
            },
            "renameByName": {
              "instance": "URL",
              "Value": "Days Until Expiry"
            }
          }
        }],
        "fieldConfig": {
          "overrides": [{
            "matcher": {"id": "byName", "options": "Days Until Expiry"},
            "properties": [{
              "id": "custom.displayMode",
              "value": "color-background"
            }, {
              "id": "thresholds",
              "value": {
                "mode": "absolute",
                "steps": [
                  {"value": 0, "color": "red"},
                  {"value": 7, "color": "orange"},
                  {"value": 30, "color": "yellow"},
                  {"value": 90, "color": "green"}
                ]
              }
            }, {
              "id": "unit",
              "value": "d"
            }]
          }]
        }
      },
      {
        "id": 7,
        "title": "Uptime Trends (7 Days)",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 34, "w": 24, "h": 8},
        "targets": [{
          "expr": "avg_over_time(probe_success[1h])",
          "legendFormat": "{{ service }}",
          "refId": "A"
        }],
        "options": {
          "calculate": true,
          "calculation": {
            "xBuckets": {
              "mode": "size",
              "value": "1h"
            }
          },
          "color": {
            "scheme": "Spectral",
            "steps": 128
          }
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              }
            }
          }
        }
      }
    ]
  }
}
