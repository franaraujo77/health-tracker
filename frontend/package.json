{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:css": "stylelint '**/*.css'",
    "lint:all": "npm run lint && npm run lint:css",
    "type-check": "tsc -b --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "tokens:validate": "tsc --noEmit src/styles/tokens/index.ts",
    "tokens:check": "npm run tokens:validate && echo 'âœ“ Design tokens are valid'",
    "prebuild": "npm run tokens:check"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@xstate/react": "^6.0.0",
    "axios": "^1.12.2",
    "material-symbols": "^0.37.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "xstate": "^5.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@statelyai/inspect": "^0.4.0",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
