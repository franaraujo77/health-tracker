{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:analyze": "tsc -b && vite build",
    "analyze": "npm run build:analyze && open dist/stats.html",
    "build:verify": "npm run build && npm run verify:no-mocks",
    "verify:no-mocks": "node scripts/verify-no-mocks.cjs",
    "lint": "eslint .",
    "lint:css": "stylelint '**/*.css'",
    "lint:all": "npm run lint && npm run lint:css",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc -b --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --reporter=verbose",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:report": "playwright show-report",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "check:bundle-size": "node scripts/check-bundle-size.cjs",
    "lighthouse": "lhci autorun",
    "lighthouse:local": "npm run build && npm run lighthouse",
    "tokens:validate": "tsc --noEmit src/styles/tokens/index.ts",
    "tokens:check": "npm run tokens:validate && echo 'âœ“ Design tokens are valid'",
    "prebuild": "npm run tokens:check"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@xstate/react": "^6.0.0",
    "axios": "^1.12.2",
    "material-symbols": "^0.37.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^7.9.4",
    "web-vitals": "^5.1.0",
    "xstate": "^5.22.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/js": "^9.36.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@size-limit/preset-app": "^11.2.0",
    "@statelyai/inspect": "^0.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^6.5.0",
    "glob": "^11.1.0",
    "globals": "^16.4.0",
    "gzip-size": "^7.0.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.5",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
