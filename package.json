{
  "name": "health-tracker",
  "version": "0.1.0",
  "description": "A comprehensive health tracking application with enterprise-grade architecture",
  "private": true,
  "workspaces": [
    "frontend",
    "shared/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules frontend/node_modules shared/*/node_modules frontend/dist backend/target",
    "prepare": "husky"
  },
  "keywords": [
    "health-tracker",
    "health",
    "fitness",
    "react",
    "spring-boot",
    "monorepo"
  ],
  "author": "Health Tracker Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franaraujo77/health-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/franaraujo77/health-tracker/issues"
  },
  "homepage": "https://github.com/franaraujo77/health-tracker#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
